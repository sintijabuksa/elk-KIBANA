//create spaces api
POST kbn:api/spaces/space
{
  "id": "azure",
  "name": "Azure",
  "description" : "Azure Resources Kibana Space",
}

//update space
PUT kbn:api/spaces/space/azure
{
"initials": "AR"
//can be more properties specified
}

//create index
PUT /database


PUT _component_template/generic-settings
{
  "template": {
    "settings": {
      "index.number_of_shards": 1,
      "index.number_of_replicas": 1
    }
  },
  "_meta": {
    "description": "Generic settings"
  }
}

//create index template
POST /index_template/database-template
{
  "index_patterns": ["database*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    }
  },
  "priority": 500,
  "version":1,
  "_meta": {
    "description": "Database custom index template"
  }
}

//create data view
POST kbn:api/data_views/data_view
{
  "data_view": {
    "title": "database*",
    "name": "Database logs data view",
    "namespaces": [
      "azure"
      ],
    "fields": {}
  }
}
